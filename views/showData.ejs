<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/ShowData.css">
</head>
<body>

  <div class="container mt-5">
    <h2 class="text-center mb-4">User Data Table</h2>

    <% if (results && results.length > 0) { %>
      <div class="table-responsive-custom">
        <table class="table table-striped table-bordered align-middle mb-0">
          <thead class="table-primary text-nowrap">
            <tr>
              <th>Registration No</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Address</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach(data => { %>
              <tr>
                <td><%= data.registration %></td>
                <td><%= data.firstname %></td>
                <td><%= data.lastname %></td>
                <td><%= data.email %></td>
                <td><%= data.phone %></td>
                <td><%= data.address %></td>
                <td><a href="/data/edit/<%=data.registration%>" class="btn btn-info btn-sm">Edit</a></td>
                <td><a href="/data/delete/<%= data.registration %>" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center">No user data available.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
