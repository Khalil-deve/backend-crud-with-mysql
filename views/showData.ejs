<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Data</title>
  <link rel="stylesheet" href="/css/ShowData.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="table-container">
      <h2 class="fw-bold">Students</h2>
      <table>
        <thead>
          <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
            <tr>
              <td data-label="Student ID"><%= student.student_id %></td>
              <td data-label="Name"><%= student.student_name %></td>
              <td data-label="Email"><%= student.email %></td>
              <td data-label="Actions" class="action-buttons">
                <a href="/student/edit/<%= student.student_id %>" class="btn btn-edit">Edit</a>
                <a href="/student/delete/<%= student.student_id %>" class="btn btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  
    <div class="table-container">
      <h2 class="fw-bold">Courses</h2>
      <table>
        <thead>
          <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Instructor</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course => { %>
            <tr>
              <td data-label="Course ID"><%= course.course_id %></td>
              <td data-label="Course Name"><%= course.course_name %></td>
              <td data-label="Instructor"><%= course.instructor_name %></td>
              <td data-label="Actions" class="action-buttons">
                <a href="/course/edit/<%= course.course_id %>" class="btn btn-edit">Edit</a>
                <a href="/course/delete/<%= course.course_id %>" class="btn btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  
    <div class="table-container">
      <h2 class="fw-bold">Enrollments</h2>
      <table>
        <thead>
          <tr>
            <th>Enrollment ID</th>
            <th>Student ID</th>
            <th>Grade</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% enrollments.forEach(enroll => { %>
            <tr>
              <td data-label="Enrollment ID"><%= enroll.enrollment_id %></td>
              <td data-label="Student ID"><%= enroll.student_id %></td>
              <td data-label="Grade"><%= enroll.grade %></td>
              <td data-label="Actions" class="action-buttons">
                <a href="/enroll/edit/<%= enroll.enrollment_id %>" class="btn btn-edit">Edit</a>
                <a href="" class="btn btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
